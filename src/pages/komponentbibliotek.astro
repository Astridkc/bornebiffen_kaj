---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Link from "../components/Link.astro";
import Button from "../components/Button.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Card from "../components/Card.astro";
---

<MainLayout title="Titel">
  <main class="container mx-auto p-4">
    <Heading htmlheading="h1" size="h1">Komponentbibliotek</Heading>
    <Text stylingclasses="italic">Her kan du finde alle de komponenter, der er brugt i dette projekt.</Text>
    <hr class="my-4" />
    <!-- start på typografi -->
    <section class="pb-7">
      <Heading htmlheading="h2" size="medium">Typografi & ovesrkrifter</Heading>
      <Text>Her kan du finde alle de komponenter, der er brugt i dette projekt.</Text>
      <Heading htmlheading="h1" size="h1">h1 - sans serif</Heading>
      <Heading htmlheading="h2" size="h2">h2 - sans serif</Heading>
      <Heading htmlheading="h3" size="h3">h3 - sans serif</Heading>
      <Heading htmlheading="h4" size="h4">h4 - sans serif</Heading>
      <Heading htmlheading="h5" size="h5">h5 - sans serif</Heading>
      <Text teksttype="brødtekst"> Her er en sektion brødtekst: Lorem ipsum dolor, sit amet consectetur adipisicing elit. Ullam dolorem doloremque commodi eaque quisquam quasi recusandae veniam. Corporis totam reiciendis quibusdam ratione iure aut, numquam tenetur voluptatem exercitationem sequi enim! </Text>
    </section>
    <!-- slut på typografi -->
    <hr class="my-4 pb-7" />

    <section>
      <Heading htmlheading="h1" size="h1">Buttons</Heading>
      <button class="mt-8 px-8 py-3 rounded-full text-lg cursor-pointer font-main border-2
         transition-all duration-200 ease-out
         text-[var(--color-primary-purple)]
         border-[var(--color-primary-purple)]
         bg-[var(--color-primary-red)]
         hover:bg-[var(--color-primary-pink)]
         hover:scale-105"> Tryk her og kom i gang! </button>

      <div class="pt-7">
        <button class="w-16 h-16 rounded-full flex items-center justify-center
             bg-[var(--color-primary-red)]
             border-4 border-[var(--color-primary-purple)]
             hover:bg-[var(--color-primary-pink)]
             transition duration-200">
          <img src="/public/profile_icon.svg" alt="profile icon" class="w-8 h-8 object-contain" />
        </button>
      </div>

      <div class="pt-7">
        <a href="../pages/liste.astro" class="w-16 h-16 rounded-full flex items-center justify-center
             bg-[var(--color-primary-red)]
             border-4 border-[var(--color-primary-purple)]
             hover:bg-[var(--color-primary-pink)]
             transition duration-200">
          <img src="/public/listview_icon.svg" alt="list view icon" class="w-8 h-8 object-contain" />
        </a>
      </div>
    </section>

    <!-- Slut på Buttons komponent instanser -->
  </main>
</MainLayout>
